<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_news"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/placeholder_2"
            />

        <TextView
            android:id="@+id/txt_headline_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_news"
            android:layout_marginTop="28dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Judul Berita Kesehatan Hari Ini" />

        <LinearLayout
            android:id="@+id/line_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_below="@id/txt_headline_news"
            android:weightSum="1">

            <TextView
                android:id="@+id/lbl_author_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penulis:"
                android:layout_weight="0.01"/>

            <TextView
                android:id="@+id/txt_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Kompas"
                android:layout_weight="0.99"/>
        </LinearLayout>







    </RelativeLayout>

</androidx.cardview.widget.CardView>